{
	"name": "root",
	"version": "0.0.0",
	"private": true,
	"author": "Microsoft Corporation",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/microsoft/vscode-webview-ui-toolkit.git"
	},
	"workspaces": [
		"./packages/toolkit",
		"./packages/toolkit-react"
	],
	"engines": {
		"yarn": ">=1.13 <2",
		"node": ">15.0.0"
	},
	"scripts": {
		"build": "npm run build --workspaces",
		"fmt": "prettier --config ./.prettierrc --check \"**/*.{ts,js,md}\"",
		"fmt:fix": "prettier --config ./.prettierrc --write \"**/*.{ts,js,md}\"",
		"lint": "npm run lint --workspaces",
		"lint:fix": "npm run lint:fix --workspaces",
		"test:toolkit": "cd packages/toolkit && npm run test:webview",
		"test:toolkit-react": "npm run build && cd packages/toolkit-react && npm run test:webview-react"
	}
}
