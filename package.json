	"repository": {
		"type": "git",
		"url": "git+https://github.com/microsoft/vscode-webview-ui-toolkit.git"
	},
	"workspaces": [
		"./packages/toolkit",
		"./packages/toolkit-react"
	],
	"scripts": {
		"build": "echo 'Building the project...' && npm run build --workspaces --no-progress",
		"fmt": "prettier --config ./.prettierrc --check \"**/*.{ts,js,md}\"",
		"fmt:fix": "prettier --config ./.prettierrc --write \"**/*.{ts,js,md}\"",
		"lint": "echo 'Running lint...' && npm run lint --workspaces --no-progress",
		"lint:fix": "npm run lint:fix --workspaces",
		"test": "echo 'Todo: add tests'"
	},
	"devDependencies": {
		"prettier": "^2.2.1"
	}
}
